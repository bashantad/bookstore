<div class="row">
    <div class="col-md-8">
        <%= form_for(@author) do |f| %>
            <% errors = @author.errors %>
            <div class="form_item">
                <%= f.label :name %>
                <%= f.text_field :name, :class => "form-control" %>

                <% if errors.present? && errors[:name].present? %>
                    <div class="error">
                        <%= errors[:name][0] %>
                    </div>
                <% end %>
            </div>

            <div class="form_item">
                <%= f.label :email %>
                <%= f.text_field :email, :class => "form-control" %>

                <% if errors.present? && errors[:email].present? %>
                    <div class="error">
                        <%= errors[:email][0] %>
                    </div>
                <% end %>
            </div>

            <div class="form_item">
                <%= f.label :phone %>
                <%= f.text_field :phone, :class => "form-control" %>
            </div>

            <div class="form_item">
                <%= f.label :country %>
                <%= f.text_field :country, :class => "form-control" %>
            </div>

            <div class="form_item control-group clearfix">
                <div class="pull-left link_item">
                    <%= f.submit @author.persisted? ? "Update" : "Create", :class => "btn btn-primary" %>
                </div>

                <div class="pull-left link_item">
                    <%= link_to "Back", authors_path, :class => "btn btn-info"  %>
                </div>
            </div>

        <% end %>
    </div>
</div>