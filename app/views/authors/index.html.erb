<div class="btn-wrapp">
    <%= link_to 'Add new author', new_author_path, :class => "btn btn-primary" %>
</div>

<h3>
    Listing Authors
</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Country</th>
            <th>Books</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% @authors.each do |author| %>
            <tr>
                <td>
                    <%= link_to author.name, author_path(author)  %>
                </td>
                <td>
                    <%= author.email %>
                </td>
                <td>
                    <%= author.phone %>
                </td>
                <td>
                    <%= author.country %>
                </td>
                <td>
                    <%= link_to "View", author_books_path(author) %>
                </td>
                <td>
                    <%= link_to 'Edit', edit_author_path(author), :class => "btn btn-info btn-sm" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

